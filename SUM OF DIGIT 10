import java.io.*;
import java.util.*;
import java.text.*;
import java.math.*;
import java.util.regex.*;

public class Solution {

    public static void main(String[] args) {
        Scanner sc=new Scanner (System.in);
        int num=sc.nextInt();
        int sum=0,rem;
        if(num<99){
            System.out.println("Invalid Input");
            return;
               }
            while(num!=0){
                rem=num%10;
                sum=sum+rem;
                num=num/10;
            }
             System.out.println("Sum of digit is " + sum);
            }
        }
        
   
